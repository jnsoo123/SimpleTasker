
  <div class="container default" style='margin-top: 40px;'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div style="width: 100%; background-color: #333; height: 75px; margin-top: 0px;">
        <p class="text-center" style="padding-top: 25px; color: #fff; font-size: 18px;">Todo App</p>
      </div>
      
      <div class="form">
        <%= devise_error_messages! %>
        <% if flash[:alert] && !flash[:alert].include?('You need to sign in or sign up before continuing.') %>
          <div class="alert alert-danger" role="alert">
            <%= flash[:alert] %>
          </div>
        <% end %>
        <p class="text-center" style="font-size: 16px;">Enter your <strong>Email</strong> and <strong>Password</strong></p>
        
        <div class="form-group">
          <%= f.email_field :email,autocomplete: :off, autofocus: true, class: 'form-control', placeholder: 'you@domain.com' %>
        </div>
        <div class="form-group">  
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'password' %>
          <% if @minimum_password_length %>
          <span class="help-block">(<%= @minimum_password_length %> characters minimum)</span>
          <% end %>
        </div>

        <div class="actions">
          <%= f.submit "Login" , class: 'btn btn-default' %>
          <%= link_to 'Sign up', new_registration_path(resource_name), class: 'btn btn-success', style: 'padding-top: 12px;' %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
          <% end -%>
        </div>
      </div>
      
    <% end %>
  </div>


