
<div class="container default" style='margin-top: 40px;'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div style="width: 100%; background-color: #333; height: 75px; margin-top: 0px;">
        <p class="text-center" style="padding-top: 25px; color: #fff; font-size: 18px;">Sign Up</p>
      </div>
      
      <div class="form">
        <%= devise_error_messages! %>
        <p class="text-center" style="font-size: 16px;">Enter your email and password</p>
        
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'you@domain.com' %>
        </div>
        <div class="form-group">
          <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder: 'Username'%>
        </div>
        <div class="form-group">
          <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Name'%>
        </div>
        <div class="form-group">  
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'password' %>
          <% if @minimum_password_length %>
          <span class="help-block">(<%= @minimum_password_length %> characters minimum)</span>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'repeat password' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" , class: 'btn btn-default', style: 'width: 100%;'%>
        </div>
      </div>
      
    <% end %>
  </div>


