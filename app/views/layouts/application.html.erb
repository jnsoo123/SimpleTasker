<!DOCTYPE html>
<html>
<head>
  <title>Simple Tasker</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if user_signed_in? %>
    <nav class="navbar navbar-default navbar-fixed-top navbar-border-color">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'Simple Tasker', home_path, class: 'navbar-brand' %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="height: 100%;"><%= "<span class='glyphicon glyphicon-user' style='margin-right: 5px;'></span> #{current_user.name} <span style='margin-left: 5px;' class='glyphicon glyphicon-chevron-down'></span>".html_safe %></a>
              <ul id="dropdown-menu" class="dropdown-menu">
                <li><%= link_to 'Edit Account', edit_user_registration_path %></li>
                <li><%= link_to "Sign Out", destroy_user_session_path %></li>
              </ul>
            </li>


          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  <% end %>
<%= yield %>

</body>
</html>
