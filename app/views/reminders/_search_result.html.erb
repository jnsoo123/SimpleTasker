<div style="border-bottom: 2px solid #6aaae1; margin-bottom: 20px;">
  Search results
</div>
<div>
  <% unless @search_result.empty? %>
    <% @search_result.each do |reminder| %>
      <div class="row" style="padding-top: 10px; font-size: 12px;">
        <div class="col-md-2 col-sm-2 col-xs-2">
          <%= link_to "<span class='glyphicon glyphicon-ok' style='color: #{ (reminder.done ? "green" : "black") };'></span>".html_safe, reminder_path(reminder.id,  reminder: { done: ( reminder.done ? 'false' : 'true' ) }), method: :put, remote: true %>
        </div>
        <div class="col-md-8 col-sm-8 col-xs-8">
          <span style="color: <%= (reminder.done ? '#a9a9a9' : 'black' ) %>"><%= (reminder.done ? '<s>'.html_safe : '' )%><%= simple_format(reminder.title) %><%= (reminder.done ? '</s>'.html_safe : '' )%></span>
        </div>
        <div class="col-md-2 col-sm-2 col-xs-2">
          <%= link_to "<span class='glyphicon glyphicon-remove pull-right'></span>".html_safe, reminder_path(reminder), method: :delete, remote: true %>
        </div>
      </div>  
    <% end %> 
  <% else %>
    <div style="margin-top: 10px; margin-bottom: 10px;">No results found...</div>
  <% end %>
</div>
<%= link_to "<span class='glyphicon glyphicon-chevron-left' style='margin-right: 10px;'></span>Back to reminders".html_safe, home_path ,class: 'btn btn-default', style: 'width: 100%; padding: 12px; margin-top: 20px;'%>